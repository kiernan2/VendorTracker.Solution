<h1>Add a new order to @Model.Name</h1>

<form action="/categories/@Model.Id/order" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="ordersDescription">Add a new order</label>
  <input id="ordersDescription" name="ordersDescription" type="text">
  <button type="submit">Submit</button>
</form>