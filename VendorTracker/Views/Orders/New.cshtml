<h1>Add a new order to @Model.Name</h1>

<form action="/vendor/@Model.Id" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderDetails">Add a new order</label>
  <input id="orderDetails" name="orderDetails" type="text">
  <button type="submit">Submit</button>
</form>